<configuration xmlns="http://logging.apache.org/log4php/">
    <appender name="ApplianceStoreLogger" class="LoggerAppenderFile">
        <param name="file" value="ApplianceStoreLogger.log" />
    </appender>
    <root>
        <level value="info" />
        <appender_ref ref="ApplianceStoreLogger" />
    </root>
</configuration>
